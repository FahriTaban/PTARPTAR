var 
x,global_time,: clock;
p,: parameter;

automaton specification

synclabs: a1,a2;

loc l1: invariant x <= 2 
when x <= 2 sync a1 goto l2;
when x >= 0 sync a2 goto lT;

loc l2: invariant x <= 4 
when x > p sync a2 goto lT;
when True sync a1 goto lT;

loc lT: invariant True 

end

automaton specification2

synclabs: a1,a2;

loc l1: invariant x >= 4 
when x <= 2 sync a1 goto l2;

loc l2: invariant x < 4 
when x <= p sync a2 do {x := 0} goto lT;

loc lT: invariant True 

end

init := {

discrete = 
loc[specification] = l1,
;

continuous = 
& global_time = 0
& x = 0
& p >= 0
& p <= 4
;
}