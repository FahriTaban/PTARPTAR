package PTA;
import java.util.List;

import org.javatuples.Pair;  

/**
 * Location in a (component) PTA.
 * @author 49173
 *
 */
public class Location {
	private final String automaton;
	private final String name;
	private final List<Constraint> invariants;

	public Location(String automaton, String n, List<Constraint> inv) {
		this.automaton = automaton;
		this.name = n;
		this.invariants = List.copyOf(inv);
	}

	public List<Constraint> getInvariants() {
		return invariants;
	}

	public String getName() {
		return name;
	}
}
