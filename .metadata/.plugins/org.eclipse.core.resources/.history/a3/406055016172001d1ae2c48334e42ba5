package PTA;

import java.util.List;
import org.javatuples.Pair;  

/**
 * Transition from State to State
 * @author 49173
 *
 */
public class Transition {
	private final State prestate;
	private final Action action;
	private final State poststate;
	private final List<Constraint> guards;
	
	public Transition(State pre, State post, List<Constraint> gs) {
		this.prestate = pre;
		this.poststate = post;
		this.guards = List.copyOf(gs);
	}

	public State getPrestate() {
		return prestate;
	}

	public State getPoststate() {
		return poststate;
	}

	public List<Constraint> getGuards() {
		return guards;
	}
}
