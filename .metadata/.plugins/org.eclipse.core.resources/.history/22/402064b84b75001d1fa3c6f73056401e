package Parsing;

import static org.junit.Assert.assertEquals;

import java.util.List;

import org.junit.Test;

public class UnitTestMP {

	public static void main(String[] args) {
		String model = "testEFExemplify1Pneg.imi";
		Model_Lexer m_lex = new Model_Lexer(model);		
		m_lex.findTokens();
		Model_Parser parser = new Model_Parser();
		List<Element> model_elems = m_lex.getTokens();
		
	}
	public void testClocks(Model_Parser parser, List<Element> model) 
	{
		List<Element> clocks = parser.getClocks(model);
		printElems(clocks);
	}
	
	public void testParameters(Model_Parser parser, List<Element> model) {
		List<Element> p = parser.getParameters(model);
		printElems(p);
	}
	
	public void testAutomata(Model_Parser parser, List<Element> model) {
		printStructures(parser.getAutomata(model));
	}
	
	public void testActions(Model_Parser parser, List<Element> automaton) {
		printElems(parser.getActions(automaton));
	}
	
	public void testLocations(Model_Parser parser, List<Element> automaton) {
		printStructures(parser.getAutomata(automaton));
	}
	
	public void testTransitions(Model_Parser parser, List<Element> location){
		printStructures(parser.getTransitions(location));
	}
	
	public void testGuards(Model_Parser parser, List<Element> transition){
		printStructures(parser.getGuards(transition));
	}
	
	public void testAction(Model_Parser parser, List<Element> transition) {
		printStructures(parser.getAction(transition));
	}
	
	public List<List<Element>> testUpdates(Model_Parser parser, List<Element> transition){
		return getElemLists(transition, "BRACE_L", "COMMA", "BRACE_R");
	}
	
	public Element getPostLoc(List<Element> transition) {
		return getVariableNames(transition, "KEY_LOCATION_GOTO", "SEMI").get(0);
	}
	
	
	static void printElem(Element elem) {
		elem.elemInfo();
	}
	
	static void printElems(List<Element> elems) {
		for (Element e : elems) {
			e.elemInfo();
		}
	}
	
	static void printStructures(List<List<Element>> structures) {
		for (List<Element> s : structures) {
			System.out.println("*".repeat(1000) + "\n NEW STRUCTURE \n " + "*".repeat(1000));
			for (Element e : s) {
				e.elemInfo();
			}
		}
	}

}
